              "body": "{\n  \"query\": \"shoes\",\n  \"results\": [\n    {\n      \"line_name\": \"Blessed Line\",\n      \"items_sold\": [\"shoes\", \"boxes\", \"buckets\", \"kitchenutensils\"],\n      \"layout\": {\n        \"column\": \"right\",\n        \"order\": 4\n      }\n    },\n    {\n      \"line_name\": \"Victory Line\",\n      \"items_sold\": [\"beads\", \"jewelries\", \"clothes\", \"babystuff\", \"shoes\", \"wigs\", \"baggyjeans\", \"bodylotion\", \"schoolequipment\"],\n      \"layout\": {\n        \"column\": \"right\",\n        \"order\": 5\n      }\n    }\n  ]\n}"
