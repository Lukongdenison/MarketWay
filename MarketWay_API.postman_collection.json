  "item": [
    {
      "name": "Questions & Search",
      "item": [
        {
          "name": "Ask Question",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"question\": \"Where can I buy shoes?\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/ask",
              "host": ["{{base_url}}"],
              "path": ["ask"]
            },
            "description": "Ask general questions about the market, products, or history. The API searches local data first, then falls back to online search if needed."
          },
          "response": [
            {
              "name": "Success - Local Data",
              "originalRequest": {
                "method": "POST",
                "header": [],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"question\": \"Where can I buy shoes?\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/ask",
                  "host": ["{{base_url}}"],
                  "path": ["ask"]
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "header": [],
              "body": "{\n  \"answer\": \"Found 'shoes' in the following lines: Blessed Line, Victory Line, Wisdom Line, Godly Line.\",\n  \"source\": \"local\",\n  \"images\": [\n    \"/images/Blessed Lines.jpg\",\n    \"/images/Victory line.jpg\",\n    \"/images/wisdom line.jpg\",\n    \"/images/Godly Line.jpg\"\n  ]\n}"
